<div class="container-fluid">
   <div class="row">
    <div class="col-md-3 col-md-offset-4">
      <div class="form">  
        <%= form_for @contacto do |f| %>
          <div class="form-group">
            <%= f.label :nombre %>
            <%= f.text_field :nombre, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :correo %>
            <%= f.text_field :correo, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :comentario %>
            <%= f.text_area :comentario, class:'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit 'Enviar', class: 'btn btn-default' %>  
          </div>
        <% end %>
      </div>  
      </div>
  </div> 
</div>